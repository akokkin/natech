{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "types": [
            "node"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "src/login.spec.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}